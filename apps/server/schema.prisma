generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:db.sqlite"
}

model vehicle_locations {
  id        Int   @id
  latitude  Float
  longitude Float
}

model drivers {
  id       Int    @id
  username String @unique
  password String
}

model owners {
  id       Int    @id
  username String @unique
  password String
}

model authorized_drivers {
  v_id Int
  d_id Int

  @@id([v_id, d_id])
}

model logs {
  v_id      Int
  d_id      Int
  timestamp DateTime
  distance  Float
  action    String

  @@id([v_id, d_id, timestamp])
}
