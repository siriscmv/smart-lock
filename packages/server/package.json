{
	"name": "smart-lock",
	"version": "0.1.0",
	"private": true,
	"prisma": {
		"schema": "./src/utils/schema.prisma"
	},
	"scripts": {
		"next:dev": "next dev",
		"tw:dev": "npx tailwindcss -i ./src/styles/tw.css -o ./src/styles/globals.css --watch",
		"dev": "run-p tw:dev next:dev",
		"build": "npx tailwindcss -i ./src/styles/tw.css -o ./src/styles/globals.css --minify && next build",
		"start": "next start",
		"lint": "next lint",
		"fmt": "npx prettier --write ./src/*"
	},
	"dependencies": {
		"@next/font": "13.1.6",
		"@types/node": "18.13.0",
		"@types/react": "18.0.27",
		"@types/react-dom": "18.0.10",
		"eslint": "8.33.0",
		"eslint-config-next": "13.1.6",
		"next": "13.1.6",
		"prisma": "^4.10.1",
		"react": "18.2.0",
		"react-dom": "18.2.0",
		"typescript": "4.9.5"
	},
	"devDependencies": {
		"@prisma/client": "^4.10.1",
		"npm-run-all": "^4.1.5",
		"tailwindcss": "^3.2.6"
	}
}
